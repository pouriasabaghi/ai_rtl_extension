{
    "manifest_version": 3,
    "name": "DeepSeek RTL",
    "version": "1.0",
    "description": "DeepSeek RTL",
    "permissions": ["scripting","activeTab", "tabs"], 
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon-16px.png",
      "48": "icon-48px.png",
      "128": "icon-128px.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  