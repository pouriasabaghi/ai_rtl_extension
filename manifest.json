{
    "manifest_version": 3,
    "name": "DeepSeek RTL",
    "version": "2.2",
    "description": "DeepSeek RTL",
    "permissions": ["activeTab"], 
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon-16px.png",
      "48": "icon-48px.png",
      "128": "icon-128px.png"
    },
    "content_scripts": [
      {
        "matches": ["https://chat.deepseek.com/*", "https://chatgpt.com/*", "https://copilot.microsoft.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  